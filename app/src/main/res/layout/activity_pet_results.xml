<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.brandonespana.wowbattlepets.activities.PetResultsActivity">

    <TextView
        android:id="@+id/resultsCharacterName"
        android:text="@string/hello_world"
        android:textSize="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resultsRealmName"
            android:text="@string/hello_world"
            android:textSize="20dp"
            android:layout_weight="4"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <TextView
            android:id="@+id/resultsCount"
            android:text="@string/resultsCount"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </LinearLayout>


    <ListView
        android:id="@+id/resultsBattlePetList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></ListView>

</LinearLayout>
